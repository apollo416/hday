{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Crop",
    "type" : "object",
    
    "required" : [
        "id",
        "name"
    ],
    
    "properties" : {
        "id" : {
            "type" : "string",
            "format": "uuid",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
        },
        "slug": {
            "type" : "string"
        },
        "name": {
            "type" : "string"
        },
        "source": {
            "type" : "string"
        },
        "yield": {
            "type" : "integer"
        },
        "sell_price": {
            "type" : "integer"
        },
        "maturation_time": {
            "type" : "integer"
        }
    }
}