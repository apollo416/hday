{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Crop",
    "type" : "object",
    
    "required" : [
        "id",
        "cultivar"
    ],
    
    "properties" : {
        "id" : {
            "type" : "string",
            "format": "uuid",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
        },
        "cultivar": {
            "type" : "string",
            "format": "uuid",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
        },
        "cultivar_start": {
            "type" : "string",
            "format": "date-time"
        },
        "cultivar_end": {
            "type" : "string",
            "format": "date-time"
        },
        "maturation_time": {
            "type" : "integer",
            "minimum": 1
        },
        "created": {
            "type" : "string",
            "format": "date-time"
        },
        "generation": {
            "type" : "integer",
            "minimum": 0
        }
    }
}